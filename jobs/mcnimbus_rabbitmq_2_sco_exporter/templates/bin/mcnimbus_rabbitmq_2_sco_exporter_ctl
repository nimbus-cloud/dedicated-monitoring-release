#!/usr/bin/env bash

set -eu

RUN_DIR=/var/vcap/sys/run/mcnimbus_rabbitmq_2_onx_exporter
LOG_DIR=/var/vcap/sys/log/mcnimbus_rabbitmq_2_onx_exporter
TMP_DIR=/var/vcap/sys/tmp/mcnimbus_rabbitmq_2_onx_exporter
STORE_DIR=/var/vcap/store/mcnimbus_rabbitmq_2_onx_exporter
mkdir -p ${RUN_DIR} ${LOG_DIR} ${TMP_DIR} ${STORE_DIR}

PIDFILE=${RUN_DIR}/mcnimbus_rabbitmq_2_onx_exporter.pid

source /var/vcap/packages/mcnimbus_rabbitmq_2_onx_exporter/common/utils.sh
exec 1>> ${LOG_DIR}/$(basename "$0").stdout.log
exec 2>> ${LOG_DIR}/$(basename "$0").stderr.log

export PATH=/var/vcap/packages/mcnimbus_rabbitmq_2_onx_exporter/bin:${PATH}

case $1 in
  start)
    pid_guard ${PIDFILE} "mcnimbus_rabbitmq_2_onx_exporter"
    echo $$ > ${PIDFILE}

    <% if_p('mcnimbus_rabbitmq_2_onx_exporter.log_level') do |log_level| %>
    export LOG_LEVEL="<%= log_level %>"
    <% end %>
    <% if_p('mcnimbus_rabbitmq_2_onx_exporter.output_format') do |output_format| %>
    export OUTPUT_FORMAT="<%= output_format %>"
    <% end %>
    <% if_p('mcnimbus_rabbitmq_2_onx_exporter.exporters') do |exporters| %>
    export RABBIT_EXPORTERS="<%= exporters %>"
    <% end %>

    <% if_p('mcnimbus_rabbitmq_2_onx_exporter.rabbitmq.hem_url') do |url| %>
    export RABBIT_URL="<%= url %>"
    <% end %>
    <% if_p('mcnimbus_rabbitmq_2_onx_exporter.rabbitmq.hem_user') do |user| %>
    export RABBIT_USER="<%= user %>"
    <% end %>
    <% if_p('mcnimbus_rabbitmq_2_onx_exporter.rabbitmq.hem_password') do |password| %>
    export RABBIT_PASSWORD="<%= password %>"
    <% end %>
    <% if_p('mcnimbus_rabbitmq_2_onx_exporter.rabbitmq.ca_cert') do %>
    export CAFILE="/var/vcap/jobs/chatbot_rabbitmq_exporter/config/ca_cert.pem"
    <% end %>
    <% if_p('mcnimbus_rabbitmq_2_onx_exporter.rabbitmq.include_queues') do |include_queues| %>
    export INCLUDE_QUEUES="<%= include_queues %>"
    <% end %>
    <% if_p('mcnimbus_rabbitmq_2_onx_exporter.rabbitmq.skip_queues') do |skip_queues| %>
    export SKIP_QUEUES="<%= skip_queues %>"
    <% end %>
    <% if_p('mcnimbus_rabbitmq_2_onx_exporter.rabbitmq.skip_tls_verify') do |skip_tls_verify| %>
    export SKIPVERIFY="<%= skip_tls_verify %>"
    <% end %>
    <% if_p('mcnimbus_rabbitmq_2_onx_exporter.rabbitmq.capabilities') do |capabilities| %>
    export RABBIT_CAPABILITIES="<%= capabilities %>"
    <% end %>
    <% if_p('mcnimbus_rabbitmq_2_onx_exporter.rabbitmq.timeout') do |timeout| %>
    export RABBIT_TIMEOUT="<%= timeout %>"
    <% end %>
    <% if_p('mcnimbus_rabbitmq_2_onx_exporter.rabbitmq.max_queues') do |max_queues| %>
    export MAX_QUEUES="<%= max_queues %>"
    <% end %>
    <% if_p('mcnimbus_rabbitmq_2_onx_exporter.rabbitmq.include_vhost') do |include_vhost| %>
    export INCLUDE_VHOST="<%= include_vhost %>"
    <% end %>
    <% if_p('mcnimbus_rabbitmq_2_onx_exporter.rabbitmq.skip_vhost') do |skip_vhost| %>
    export SKIP_VHOST="<%= skip_vhost %>"
    <% end %>

    export PUBLISH_PORT="<%= p('mcnimbus_rabbitmq_2_onx_exporter.web.port') %>"

    exec mcnimbus_rabbitmq_2_onx_exporter \
      >>  ${LOG_DIR}/mcnimbus_rabbitmq_2_onx_exporter.stdout.log \
      2>> ${LOG_DIR}/mcnimbus_rabbitmq_2_onx_exporter.stderr.log
    ;;

  stop)
    kill_and_wait ${PIDFILE}
    ;;

  *)
    echo "Usage: $0 {start|stop}"
    exit 1
    ;;

esac
exit 0
