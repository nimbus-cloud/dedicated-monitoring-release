#!/usr/bin/env bash

set -eu

RUN_DIR=/var/vcap/sys/run/ocp_shop_redis_exporter
LOG_DIR=/var/vcap/sys/log/ocp_shop_redis_exporter
TMP_DIR=/var/vcap/sys/tmp/ocp_shop_redis_exporter
STORE_DIR=/var/vcap/store/ocp_shop_redis_exporter
mkdir -p ${RUN_DIR} ${LOG_DIR} ${TMP_DIR} ${STORE_DIR}

PIDFILE=${RUN_DIR}/ocp_shop_redis_exporter.pid

source /var/vcap/packages/ocp_shop_redis_exporter/common/utils.sh
exec 1>> ${LOG_DIR}/$(basename "$0").stdout.log
exec 2>> ${LOG_DIR}/$(basename "$0").stderr.log

export PATH=/var/vcap/packages/ocp_shop_redis_exporter/bin:${PATH}

case $1 in
  start)
    pid_guard ${PIDFILE} "ocp_shop_redis_exporter"
    echo $$ > ${PIDFILE}

    exec ocp_shop_redis_exporter \
      <% if_p('ocp_shop_redis_exporter.redis.check_keys') do |check_keys| %> \
      -check-keys="<%= check_keys %>" \
      <% end %> \
      <% if_p('ocp_shop_redis_exporter.redis.check_single_keys') do |check_single_keys| %> \
      -check-single-keys="<%= check_single_keys %>" \
      <% end %> \
      <% if p('ocp_shop_redis_exporter.debug') %> \
      -debug \
      <% end %> \
      <% if_p('ocp_shop_redis_exporter.log_format') do |log_format| %> \
      -log-format="<%= log_format %>" \
      <% end %> \
      <% if_p('ocp_shop_redis_exporter.namespace') do |namespace| %> \
      -namespace="<%= namespace %>" \
      <% end %> \
      <% if p('ocp_shop_redis_exporter.redis_only_metrics') %> \
      -redis-only-metrics \
      <% end %> \
      <% if_p('ocp_shop_redis_exporter.redis.address') do |address| %> \
      -redis.addr="<%= address %>" \
      <% end %> \
      <% if_p('ocp_shop_redis_exporter.redis.alias') do |redis_alias| %> \
      -redis.alias="<%= redis_alias %>" \
      <% end %> \
      <% if_p('ocp_shop_redis_exporter.redis.password') do |password| %> \
      -redis.password="<%= password %>" \
      <% end %> \
      <% if_p('ocp_shop_redis_exporter.redis.script') do |script| %> \
      -script="/var/vcap/jobs/ocp_shop_redis_exporter/config/script" \
      <% end %> \
      <% if_p('ocp_shop_redis_exporter.redis.separator') do |separator| %> \
      -separator="<%= separator %>" \
      <% end %> \
      -web.listen-address=":<%= p('ocp_shop_redis_exporter.web.port') %>" \
      <% if_p('ocp_shop_redis_exporter.web.telemetry_path') do |telemetry_path| %> \
      -web.telemetry-path="<%= telemetry_path %>" \
      <% end %> \
      >>  ${LOG_DIR}/ocp_shop_redis_exporter.stdout.log \
      2>> ${LOG_DIR}/ocp_shop_redis_exporter.stderr.log
    ;;

  stop)
    kill_and_wait ${PIDFILE}
    ;;

  *)
    echo "Usage: $0 {start|stop}"
    exit 1
    ;;

esac
exit 0